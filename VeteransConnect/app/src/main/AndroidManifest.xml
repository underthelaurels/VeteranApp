<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agileenhanced.cs4704.veteransconnect">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- For use with Volley and sending/getting information from web -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity" />
        <activity android:name=".EmploymentActivity" />
        <activity android:name=".DiscountActivity" />
        <activity android:name=".DiscountResultsActivity" />
        <activity android:name=".EmploymentOrVolunteeringActivity" />
        <activity android:name=".EmploymentResultsActivity" />
        <activity android:name=".VolunteeringActivity" />
        <activity android:name=".VolunteeringResultsActivity" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".ChatSelection" />
        <activity android:name=".EventsActivity"></activity>
    </application>

</manifest>